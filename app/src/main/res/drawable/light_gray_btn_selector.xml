<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:angle="90.0" android:endColor="@color/colorLightGrayBtnPressedTrue" android:startColor="@color/colorLightGrayBtnPressedTrue" android:type="linear" />
            <padding android:bottom="7dp" android:left="20dp" android:right="20dp" android:top="7dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <corners android:radius="5dp" />
            <gradient android:angle="90.0" android:endColor="@color/colorLightGrayBtnPressedFalse" android:startColor="@color/colorLightGrayBtnPressedFalse" android:type="linear" />
            <padding android:bottom="7dp" android:left="20dp" android:right="20dp" android:top="7dp" />
        </shape>
    </item>
</selector>